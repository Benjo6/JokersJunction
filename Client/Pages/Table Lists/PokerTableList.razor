@page "/poker-tables"
@inherits PokerTableListBase

@if (PokerTables == null)
{
    <div class="spinner"></div>
}
else if (!PokerTables.Any())
{
    <p>There are no tables</p>
}
else
{
    <div class="card-deck">
        @foreach (var table in PokerTables)
        {
            <DisplayPokerTable CurrentTable="table" OnChange="UpdateHandler"></DisplayPokerTable>
        }
    </div>
}